{
  "name": "@pi4/api",
  "version": "2.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "wrangler dev",
    "generate": "drizzle-kit generate",
    "push": "drizzle-kit push",
    "migrate": "wrangler d1 migrations apply meet-production",
    "migrate:local": "wrangler d1 migrations apply meet-production --local",
    "seed": "wrangler d1 execute meet-production --file=./seed/seed.sql",
    "seed:local": "wrangler d1 execute meet-production --local --file=./seed/seed.sql",
    "studio": "drizzle-kit studio",
    "deploy": "wrangler deploy --minify src/worker.ts",
    "postinstall": "bun generate",
    "clean": "rm -rf .turbo node_modules"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.3.4",
    "@neondatabase/serverless": "^0.10.4",
    "@trpc/server": "^10.45.2",
