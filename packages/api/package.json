    "drizzle-orm": "^0.40.1",
    "drizzle-zod": "^0.7.0",
    "hono": "^4.7.4",
    "miniflare": "4.20250317.0",
    "superjson": "2.2.2",
    "valibot": "^1.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250317.0",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.5",
    "typescript": "^5.8.3",
    "wrangler": "4.1.0"
  }
